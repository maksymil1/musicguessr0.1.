generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Pamiętaj, że tutaj masz swoje zmienne z .env
  url       = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Room {
  id        String    @id @default(uuid())
  code      String    @unique
  status    String    @default("WAITING")
  currentSongStart DateTime?
  createdAt DateTime  @default(now())
  players   Player[]
  messages  Message[] // Relacja do wiadomości
}

model Player {
  id        String   @id @default(uuid())
  nickname  String
  score     Int      @default(0)
  isHost    Boolean  @default(false)
  roomId    String
  // onDelete: Cascade sprawia, że jak usuniesz pokój, gracze znikną sami
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  text      String
  nickname  String
  roomId    String
  // onDelete: Cascade sprawia, że jak usuniesz pokój, wiadomości znikną same
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Friend {
  id        String   @id @default(uuid())
  nickname  String   @unique
  addedAt   DateTime @default(now())
}

model GlobalRanking {
  id         String   @id @default(uuid())
  nickname   String   @unique
  totalScore Int      @default(0)
  updatedAt  DateTime @updatedAt
}

model FriendRequest {
  id           String   @id @default(uuid())
  senderNick   String
  receiverNick String
  status       String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  createdAt    DateTime @default(now())

  @@unique([senderNick, receiverNick])
}
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}

// --- MODELE APLIKACJI (PUBLIC) ---

model Profile {
  id                 String   @id @db.Uuid
  nickname           String   @unique
  // KOSZYK SOLO
  games_played       Int      @default(0) 
  guessed_percentage Int      @default(0) 
  // KOSZYK MULTI
  points             Int      @default(0) 
  multi_games_played Int      @default(0) // Musisz to dodać tutaj
  
  @@map("Profiles")
}

model Room {
  id               String    @id @default(uuid())
  code             String    @unique
  status           String    @default("WAITING")
  currentSongStart DateTime?
  createdAt        DateTime  @default(now())
  gameMode         String? // Opcjonalnie: 'classic' | 'genre'
  gameQuery        String? // Np. nazwa playlisty lub artysty
  currentRound     Int       @default(0)
  // Jeśli przechowujesz kolejkę piosenek w bazie, możesz dodać pole Json:
  // gameQueue        Json?     

  players  Player[]
  messages Message[]

  @@schema("public")
}

model Player {
  id        String   @id @default(uuid())
  nickname  String
  score     Int      @default(0) // Punkty tymczasowe w lobby
  isHost    Boolean  @default(false)
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@schema("public")
}

model Message {
  id        String   @id @default(uuid())
  text      String
  nickname  String
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@schema("public")
}

model Friend {
  id       String   @id @default(uuid())
  nickname String   @unique
  addedAt  DateTime @default(now())

  @@schema("public")
}

model GlobalRanking {
  id         String   @id @default(uuid())
  nickname   String   @unique
  totalScore Int      @default(0)
  updatedAt  DateTime @updatedAt
  profile    Profile  @relation(fields: [nickname], references: [nickname])

  @@schema("public")
}

model FriendRequest {
  id           String   @id @default(uuid())
  senderNick   String
  receiverNick String
  status       String   @default("PENDING")
  createdAt    DateTime @default(now())

  @@unique([senderNick, receiverNick])
  @@schema("public")
}